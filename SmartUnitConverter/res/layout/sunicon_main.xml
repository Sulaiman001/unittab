<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:animateLayoutChanges="true"
    android:shrinkColumns="2"
    android:stretchColumns="0,1">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView />

        <TextView
            android:id="@+id/categoryLabel"
            android:text="Length Distance"
            android:textColor="#258AAF"
            android:textSize="12sp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ViewSwitcher
            android:id="@+id/baseValueSwitcher"
            android:layout_marginRight="5dp" >

            <EditText
                android:id="@+id/valueEditor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/valueSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_blue_colorstate"
                android:padding="5dp"
                android:popupBackground="@drawable/droplist"
                android:textSize="16sp" />
        </ViewSwitcher>

        <dh.sunicon.UnitAutoCompleteView
            android:id="@+id/baseUnitEditor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp"
            android:maxLength="27"
            android:textStyle="bold" />

        <Button
            android:id="@+id/clearBaseUnitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="clearBaseUnitButton_Click"
            android:text="x"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Convert to" />

        <EditText
            android:id="@+id/targetUnitFilterEditor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="textNoSuggestions|textFilter"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="clearTargetUnitFilterButton_Click"
            android:text="x"
            android:textSize="16sp" />
    </TableRow>

    <ListView
        android:id="@android:id/list"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:listSelector="@drawable/edittext_active" />

</TableLayout>