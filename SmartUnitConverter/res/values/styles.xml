<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
       <item name="android:editTextStyle">@style/edittext_blue</item>
       <item name="android:autoCompleteTextViewStyle">@style/autocompletetextview_blue</item>
    </style>

    <style name="NoTitleDialog" parent="android:style/Theme.Dialog">
    	<item name="android:windowNoTitle">true</item>
	</style>
    
    <style name="edittext_blue" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edittext_blue_colorstate</item>
    </style>
    
    <style name="autocompletetextview_blue" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/edittext_blue_colorstate</item>
        <item name="android:popupBackground">@drawable/droplist</item>
    </style>
    
    <style name="spinner_blue" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/edittext_blue_colorstate</item>
        <item name="android:popupBackground">@drawable/droplist</item>
    </style>
    
    <style name="button_clear" parent="@android:style/Widget.Button">
        <item name="android:text">x</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/oval_blue</item>
        <item name="android:textColor">#3b9fb1</item>
    </style>
    
</resources>